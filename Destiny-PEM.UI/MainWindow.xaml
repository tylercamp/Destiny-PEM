<Window x:Class="DestinyPEM.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Destiny PEM" Height="480" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100*"/>
			<RowDefinition Height="3" />
			<RowDefinition Height="100*" MinHeight="50"/>
		</Grid.RowDefinitions>

		<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

		<FlowDocumentScrollViewer Grid.Row="2">
			<FlowDocument x:Name="DebugOutput" />
		</FlowDocumentScrollViewer>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="113,97,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
